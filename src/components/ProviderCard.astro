---
import type { Provider } from '../data/providers';

export interface Props {
  provider: Provider;
  lang: string;
}

const { provider, lang } = Astro.props;
---

<div class="provider">
  <h3>{provider.category}</h3>
  <ul>
    <li>
      <a href={`/${lang}/kuendigung/${provider.slug}`} class="provider-link">
        {provider.name} k√ºndigen
      </a>
    </li>
  </ul>
</div>

<style>
  .provider {
    flex: 1;
    min-width: 200px;
  }

  h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    margin-bottom: 0.5rem;
  }

  .provider-link {
    text-decoration: none;
    color: var(--primary-color);
    transition: color 0.3s ease;
  }

  .provider-link:hover {
    color: var(--primary-light);
  }
</style>