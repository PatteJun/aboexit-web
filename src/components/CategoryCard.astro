---
import type { Provider } from '../lib/api';

export interface Props {
  providers: Provider[];
  lang: string;
}

const { providers, lang } = Astro.props;

// Group providers by category
const groupedProviders = providers.reduce((acc, provider) => {
  const categorySlug = provider.category.slug;
  if (!acc[categorySlug]) {
    acc[categorySlug] = {
      name: provider.category.name,
      providers: []
    };
  }
  acc[categorySlug].providers.push(provider);
  return acc;
}, {} as Record<string, { name: string; providers: Provider[] }>);
---

{Object.entries(groupedProviders).map(([categorySlug, { name, providers }]) => (
  <div class="category-card">
    <div class="category-header">
      <div class="icon" set:html={providers[0].category.icon} />
      <h3>{name}</h3>
    </div>
    <ul class="provider-list">
      {providers.map(provider => (
        <li>
          <a href={`/${lang}/kuendigung/${categorySlug}/${provider.slug}`} class="provider-link">
            <span class="name">{provider.name}</span>
            <span class="arrow">â†’</span>
          </a>
        </li>
      ))}
    </ul>
  </div>
))}

<style>
  .category-card {
    background: var(--white);
    border: 1px solid var(--border-color);
    border-radius: 1rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: var(--shadow-sm);
    margin-bottom: 2rem;
  }

  .category-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
    border-color: var(--primary-color);
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: var(--background-color);
    border-radius: 0.75rem;
    color: var(--primary-color);
  }

  h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-light);
    margin: 0;
  }

  .provider-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .provider-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: var(--background-color);
    border-radius: 0.5rem;
    color: var(--text-color);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    margin-bottom: 0.5rem;
  }

  .provider-link:hover {
    background: var(--primary-color);
    color: var(--white);
  }

  .name {
    font-size: 1rem;
  }

  .arrow {
    font-size: 1.25rem;
    transition: transform 0.2s ease;
  }

  .provider-link:hover .arrow {
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .category-card {
      padding: 1.25rem;
    }
  }
</style>