---
import Layout from '../../layouts/Layout.astro';
import ProviderCard from '../../components/ProviderCard.astro';
import { providers } from '../../data/providers';
import { ui, languages } from '../../i18n/ui';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
    props: { lang }
  }));
}

const { lang } = Astro.props;
const t = ui[lang];
---

<Layout 
  title={`${t['hero.title']} - ${t['site.name']}`}
  description={t['site.description']}
  lang={lang}
>
  <div class="container">
    <section class="hero">
      <h1>{t['hero.title']}</h1>
      <p>{t['hero.subtitle']}</p>
    </section>

    <section class="providers">
      <h2>{t['providers.title']}</h2>
      <div class="provider-grid">
        {providers.map((provider) => (
          <ProviderCard provider={provider} lang={lang} />
        ))}
      </div>
    </section>

    <section class="features">
      <h2>{t['how.title']}</h2>
      <div class="features-grid">
        <div class="feature">
          <div class="feature-icon">1</div>
          <h3>{t['step.1.title']}</h3>
          <p>{t['step.1.description']}</p>
        </div>
        <div class="feature">
          <div class="feature-icon">2</div>
          <h3>{t['step.2.title']}</h3>
          <p>{t['step.2.description']}</p>
        </div>
        <div class="feature">
          <div class="feature-icon">3</div>
          <h3>{t['step.3.title']}</h3>
          <p>{t['step.3.description']}</p>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hero {
    text-align: center;
    margin-bottom: 5rem;
    padding: 4rem 0;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--text-light);
    max-width: 800px;
    margin: 0 auto;
  }

  .providers {
    margin-bottom: 5rem;
  }

  .providers h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2.5rem;
    text-align: center;
  }

  .provider-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .features {
    background: var(--white);
    padding: 5rem 0;
    border-radius: 1.5rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border-color);
  }

  .features h2 {
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 3rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    padding: 0 2rem;
  }

  .feature {
    text-align: center;
    padding: 2rem;
  }

  .feature-icon {
    width: 3rem;
    height: 3rem;
    background: var(--primary-color);
    color: var(--white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-weight: 600;
    font-size: 1.25rem;
  }

  .feature h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .feature p {
    color: var(--text-light);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2rem 0;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .features {
      padding: 3rem 0;
    }

    .provider-grid {
      grid-template-columns: 1fr;
    }
  }
</style>